@model MvcWebUI.Models.RegisterModel

@{
    ViewBag.Title = "Register Page";
}
<br />
<div class="row">
    <div class="col-md-2"></div>

    <div class="col-md-8">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <br/>

                <p style="color: red;">@Html.ValidationMessage("MemberException")</p>

                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    <center>
                        <h4>KAYIT OL</h4>
                    </center>
                    <br/>
                    <div class="form-row">

                        <div class="form-group col-md-12">
                            <label class="input-group-text col-md-3" for="inputName">Ad</label>
                            @Html.TextBoxFor(m => m.Users.FirsName, new {@class = "form-control", @id = "inputName"})
                            @Html.ValidationMessageFor(m => m.Users.FirsName, "", new {@class = "text-danger"})
                        </div>
                        <div class="form-group col-md-12">
                            <label class="input-group-text col-md-3" for="inputLastName">Soyad</label>
                            @Html.TextBoxFor(m => m.Users.LastName, new {@class = "form-control", @id = "inputLastName"})
                            @Html.ValidationMessageFor(m => m.Users.LastName, "", new {@class = "text-danger"})
                        </div>
                        <div class="form-group col-md-12">
                            <label class="input-group-text col-md-3" for="inputUserName">Kullanıcı Adı</label>
                            @Html.TextBoxFor(m => m.Users.UserName, new {@class = "form-control", @id = "inputUserName"})
                            @Html.ValidationMessageFor(m => m.Users.UserName, "", new {@class = "text-danger"})
                        </div>
                        <div class="form-group col-md-12">
                            <label class="input-group-text col-md-3" for="inputPassword">Şifre</label>
                            @Html.PasswordFor(m => m.Users.Password, new {@class = "form-control", @id = "inputPassword"})
                            <small id="inputPassword" class="text-muted">
                                *Şifreniz En az 6, En çok 12 karakter olmalıdır.
                            </small>
                            @Html.ValidationMessageFor(m => m.Users.Password, "", new {@class = "text-danger"})
                        </div>
                        <div class="form-group col-md-12">
                            <label class="input-group-text col-md-3" for="inputEmail">E-Mail</label>
                            @Html.TextBoxFor(m => m.Users.Email, new {@class = "form-control", @id = "inputEmail"})
                            <small id="inputEmail" class="text-muted">
                                *Aktivasyon için gerekli mail adresi
                            </small>
                            @Html.ValidationMessageFor(m => m.Users.Email, "", new {@class = "text-danger"})
                        </div>
                        <div class="form-group">
                            <div class="offset-3 col-md-9">
                                <input type="submit" value="Kayıt Ol" class="btn btn-info"/>
                            </div>
                        </div>
                    </div>


                }

            </div>
        </div>


    </div>
</div>
